---
import CalculatorLayout from "../../layouts/CalculatorLayout.astro";
import { AwsSecretsManagerCostCalculator as AwsSecretsManagerCostCalculatorComponent } from "../../components/calculators/AwsSecretsManagerCost";

const title = "AWS Secrets Manager Cost Calculator";
const description =
  "Estimate Secrets Manager-style costs from secret-months and API call volume. Educational use only.";
---
<CalculatorLayout
  title={title}
  description={description}
  canonicalPath="/calculators/aws-secrets-manager-cost-calculator"
  intro="Estimate Secrets Manager-style cost with a simple model: secret-month charges plus API request charges. Use your effective region pricing and your measured API call volume."
  examples={[
    "500 secrets at $0.40/secret-month and 300M API calls/month at $0.05 per 10k calls.",
  ]}
  includes={[
    "Secret-month baseline from secrets count and $ per secret-month.",
    "API request charges from API calls/month and $ per 10k calls.",
  ]}
  excludes={[
    "Rotation workflows and downstream service costs (Lambda, databases, etc.) unless modeled separately.",
    "Fine-grained pricing nuances; use your effective blended rates.",
  ]}
  how={[
    "Secret cost = secrets x $ per secret-month.",
    "API cost = (API calls per month / 10,000) x $ per 10k calls.",
    "Total = secret-months + API calls.",
  ]}
  faqs={[
    {
      q: "Why do Secrets Manager costs spike?",
      a: "Most spikes are request-driven: applications calling GetSecretValue frequently (per request), many pods/instances starting frequently, or retry loops causing repeated secret fetches.",
    },
    {
      q: "Whatâ€™s the fastest lever to reduce cost?",
      a: "Reduce API calls by caching secrets in memory with safe refresh, and avoid fetching secrets on every request.",
    },
  ]}
  lastUpdated="2026-01-21"
  related={[
    { href: "/guides/aws-secrets-manager-pricing", label: "Guide: Secrets Manager pricing" },
    { href: "/guides/aws-secrets-manager-estimate-api-calls", label: "Guide: estimate API calls" },
    { href: "/guides/aws-secrets-manager-cost-optimization", label: "Guide: reduce costs" },
    { href: "/calculators/aws-ssm-parameter-store-cost-calculator", label: "Parameter Store cost calculator" },
  ]}
>
  <AwsSecretsManagerCostCalculatorComponent client:load />
</CalculatorLayout>

