---
import BaseLayout from "../layouts/BaseLayout.astro";
import { SITE } from "../config/site";

const title = `Terms | ${SITE.name}`;
const description = "Terms of use for CloudCostKit.";
---
<BaseLayout title={title} description={description} canonicalPath="/terms">
  <section class="card hero">
    <h1>Terms</h1>
    <p>Basic terms for using this site.</p>
  </section>

  <section class="card section prose">
    <h2 style="margin-top:0">Educational use</h2>
    <p class="muted" style="margin:0">
      {SITE.name} provides educational calculators and related content. Results are estimates and may not match provider
      billing. You are responsible for validating assumptions and decisions.
    </p>

    <h2 style="margin:18px 0 10px">No warranties</h2>
    <p class="muted" style="margin:0">
      The site is provided “as is” without warranties of any kind. We are not liable for losses arising from use of the
      site.
    </p>

    <h2 style="margin:18px 0 10px">Contact</h2>
    <p class="muted" style="margin:0">
      <a href={`mailto:${SITE.email}`}>{SITE.email}</a>
    </p>
  </section>
</BaseLayout>

