---
import "../styles/global.css";
import { SITE } from "../config/site";
import { withTrailingSlash } from "../lib/url";
import AdSenseScript from "../components/AdSenseScript.astro";
import Ga4Script from "../components/Ga4Script.astro";
import ConsentModeScript from "../components/ConsentModeScript.astro";
import FundingChoicesScript from "../components/FundingChoicesScript.astro";

type Props = {
  title: string;
  description?: string;
  canonicalPath?: string;
  robots?: string;
};

const { title, description, canonicalPath, robots } = Astro.props;
const siteUrl = Astro.site ? Astro.site.toString() : SITE.url;
const normalizedCanonicalPath = canonicalPath ? withTrailingSlash(canonicalPath) : undefined;
const canonical = normalizedCanonicalPath ? new URL(normalizedCanonicalPath, siteUrl).toString() : undefined;
const ogImage = new URL("/og.svg", siteUrl).toString();
const robotsValue = robots ?? "index,follow,max-snippet:-1,max-image-preview:large,max-video-preview:-1";

const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: SITE.name,
  url: SITE.url,
  logo: new URL("/logo.svg", siteUrl).toString(),
};

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: SITE.name,
  url: SITE.url,
};
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="alternate icon" href="/favicon.ico" sizes="any" />
    {description ? <meta name="description" content={description} /> : null}
    {canonical ? <link rel="canonical" href={canonical} /> : null}
    <meta property="og:site_name" content={SITE.name} />
    <meta property="og:title" content={title} />
    {description ? <meta property="og:description" content={description} /> : null}
    <meta property="og:type" content="website" />
    <meta property="og:locale" content={SITE.locale} />
    {canonical ? <meta property="og:url" content={canonical} /> : null}
    <meta property="og:image" content={ogImage} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    {description ? <meta name="twitter:description" content={description} /> : null}
    <meta name="twitter:image" content={ogImage} />
    <meta name="referrer" content="strict-origin-when-cross-origin" />
    <meta name="robots" content={robotsValue} />
    <meta name="color-scheme" content="dark" />
    <meta name="theme-color" content="#0b1220" />
    <script type="application/ld+json" is:inline set:html={JSON.stringify([organizationSchema, websiteSchema])} />
    <ConsentModeScript />
    <FundingChoicesScript />
    <AdSenseScript />
    <Ga4Script />
  </head>
  <body>
    <div class="page">
      <header class="container">
        <div class="chrome topbar">
          <a class="brand" href="/">
            <img class="brand-logo" src="/logo.svg" alt={`${SITE.name} logo`} width="168" height="32" />
          </a>
          <nav class="nav" aria-label="Primary">
            <a href="/calculators/">Tools</a>
            <a href="/guides/">Guides</a>
            <a href="/methodology/">Methodology</a>
            <a href="/about/">About</a>
            <a href="/contact/">Contact</a>
            <a href="/privacy-policy/">Privacy</a>
          </nav>
        </div>
      </header>

      <main class="container">
        <slot />
      </main>

      <footer class="container footer">
        <div class="footer-inner">
          <div class="footer-meta">Educational use only. Not legal, financial, or professional advice.</div>
          <nav class="footer-links" aria-label="Footer">
            <a href="/terms/">Terms</a>
            <a href="/privacy-policy/">Privacy Policy</a>
            <a href="/cookie-notice/">Cookie Notice</a>
            <a href="/methodology/">Methodology</a>
            <a href="/sitemap/">Sitemap</a>
            <a href="/contact/">Contact</a>
          </nav>
        </div>
      </footer>
    </div>

    <script is:inline>
      {`
        (function () {
          var nodes = document.querySelectorAll('[data-email-user][data-email-domain]');
          if (!nodes || !nodes.length) return;

          for (var i = 0; i < nodes.length; i++) {
            var el = nodes[i];
            var u = el.getAttribute('data-email-user') || '';
            var d = el.getAttribute('data-email-domain') || '';
            if (!u || !d) continue;

            var email = u + '@' + d;
            el.textContent = email;
            el.setAttribute('href', 'mailto:' + email);
            el.removeAttribute('data-email-user');
            el.removeAttribute('data-email-domain');
          }
        })();
      `}
    </script>
  </body>
</html>
